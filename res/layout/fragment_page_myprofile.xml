<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#39f"
        android:orientation="horizontal" >

        <fragment
            android:id="@+id/me_titlebar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            class="com.example.bbook.api.widgets.TitleBarFragment"
            tools:layout="@layout/fragment_widget_titlebar" />

        <ImageView
            android:id="@+id/menu_me"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/icon_menu" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_change_userMessage"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <com.example.bbook.api.widgets.AvatarView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/showName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/showMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#DDDDDD" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="我的功能" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_margin="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <fragment
                        android:id="@+id/btn_openStore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        class="com.example.bbook.api.widgets.ItemFragment"
                        tools:layout="@layout/fragment_widget_item" />

                    <fragment
                        android:id="@+id/btn_myStore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        class="com.example.bbook.api.widgets.ItemFragment"
                        tools:layout="@layout/fragment_widget_item" />
                </FrameLayout>

                <fragment
                    android:id="@+id/btn_bill"
                    android:layout_width="0dp"
                    android:layout_margin="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    class="com.example.bbook.api.widgets.ItemFragment"
                    tools:layout="@layout/fragment_widget_item" />

                <fragment
                    android:id="@+id/btn_wallet"
                    android:layout_width="0dp"
                    android:layout_margin="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    class="com.example.bbook.api.widgets.ItemFragment"
                    tools:layout="@layout/fragment_widget_item" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <fragment
                    android:id="@+id/btn_order"
                    android:layout_width="0dp"
                    android:layout_margin="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    class="com.example.bbook.api.widgets.ItemFragment"
                    tools:layout="@layout/fragment_widget_item" />

                <View
                    android:layout_width="0dp"
                    android:layout_margin="0.1dp"
                    android:layout_height="86dp"
                    android:background="@android:color/white"
                    android:layout_weight="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_margin="0.1dp"
                    android:layout_height="86dp"
                    android:background="@android:color/white"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/white"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="个人中心" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <fragment
                    android:id="@+id/btn_change_password"
                    android:layout_width="0dp"
                    android:layout_margin="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    class="com.example.bbook.api.widgets.ItemFragment"
                    tools:layout="@layout/fragment_widget_item" />

                <fragment
                    android:id="@+id/btn_exit"
                    android:layout_width="0dp"
                    android:layout_margin="0.1dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    class="com.example.bbook.api.widgets.ItemFragment"
                    tools:layout="@layout/fragment_widget_item" />

                <View
                    android:layout_width="0dp"
                    android:layout_margin="0.1dp"
                    android:layout_height="86dp"
                    android:background="@android:color/white"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>