<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="220dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_return"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_return_article" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="详情" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#DCDCDC"
                android:gravity="left"
                android:orientation="horizontal" >

                <com.example.bbook.api.widgets.AvatarView
                    android:id="@+id/avatar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/txt_author"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:text="author"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="8dp"
                    android:gravity="left"
                    android:text="title"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="text"
                    android:textSize="20sp" />

                <com.example.bbook.api.widgets.RectangleView
                    android:id="@+id/articleImage"
                    android:layout_width="240dp"
                    android:layout_height="200dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.56"
                    android:gravity="right|bottom"
                    android:text="date"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/fra_like"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_like_none" />

            <TextView
                android:id="@+id/count_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="52dp"
                android:gravity="left|center_vertical" />
        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/darker_gray" />

        <FrameLayout
            android:id="@+id/fra_comment"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_comment_article" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="55dp"
                android:gravity="left|center_vertical"
                android:text="评论" />
        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/darker_gray" />

        <FrameLayout
            android:id="@+id/fra_reward"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_reward"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_reward_article" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="55dp"
                android:gravity="left|center_vertical"
                android:text="打赏" />
        </FrameLayout>
    </LinearLayout>

<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="25dp"
            android:text="热门跟帖"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_hot_article" />

    </FrameLayout>
    <ListView
        android:id="@+id/list_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>