<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <fragment
                android:id="@+id/input_goods_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="inputcells.PictureInputCellFragment"
                tools:layout="@layout/fragment_inputcell_picture" />

            <fragment
                android:id="@+id/input_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="inputcells.SimpleTextInputcellFragment"
                tools:layout="@layout/fragment_inputcell_simpleted" />

            <fragment
                android:id="@+id/input_goods_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="inputcells.SimpleTextInputcellFragment"
                tools:layout="@layout/fragment_inputcell_simpleted" />

            <fragment
                android:id="@+id/input_goods_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="inputcells.SimpleTextInputcellFragment"
                tools:layout="@layout/fragment_inputcell_simpleted" />

            <fragment
                android:id="@+id/input_goods_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="inputcells.SimpleTextInputcellFragment"
                tools:layout="@layout/fragment_inputcell_simpleted" />

            <fragment
                android:id="@+id/input_goods_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="inputcells.SimpleTextInputcellFragment"
                tools:layout="@layout/fragment_inputcell_simpleted" />

            <fragment
                android:id="@+id/input_goods_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="inputcells.SimpleTextInputcellFragment"
                tools:layout="@layout/fragment_inputcell_simpleted" />

            <fragment
                android:id="@+id/input_goods_pubdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="inputcells.SimpleTextInputcellFragment"
                tools:layout="@layout/fragment_inputcell_simpleted" />

            <fragment
                android:id="@+id/input_goods_pritime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                class="inputcells.SimpleTextInputcellFragment"
                tools:layout="@layout/fragment_inputcell_simpleted" />

            <Button
                android:id="@+id/submit"
                android:text="submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>