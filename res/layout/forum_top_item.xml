<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDCDC"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingLeft="10dp" >

        <com.example.bbook.api.widgets.AvatarView
            android:id="@+id/avatar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txt_author"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="author"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="text"
            android:textSize="15sp" />

        <com.example.bbook.api.widgets.RectangleView
            android:id="@+id/img1"
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <com.example.bbook.api.widgets.RectangleView
            android:id="@+id/img2"
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <com.example.bbook.api.widgets.RectangleView
            android:id="@+id/img3"
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.56"
            android:gravity="right|bottom"
            android:paddingRight="12dp"
            android:text="date"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/fra_like"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_like_none" />

            <TextView
                android:id="@+id/count_like"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:textSize="10sp" />
        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/darker_gray" />

        <FrameLayout
            android:id="@+id/fra_comment"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_comment_article1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:text="评论"
                android:textSize="10sp" />
        </FrameLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/darker_gray" />

        <FrameLayout
            android:id="@+id/fra_reward"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/img_reward"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_reward_article1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:text="打赏"
                android:textSize="10sp" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="25dp"
            android:text="热门跟帖"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_hot_article" />
    </FrameLayout>

</LinearLayout>