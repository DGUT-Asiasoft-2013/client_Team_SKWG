<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/pay_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
      android:layout_centerInParent="true"
        class="inputcells.SimpleTextInputcellFragment"
        tools:layout="@layout/fragment_inputcell_simpleted" />
    <Button 
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_password"
        android:layout_centerHorizontal="true"
        android:text="确认支付"
        />
    <TextView 
        android:id="@+id/text_set_paypassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没有支付密码？"
        android:layout_below="@id/btn_pay"
        android:layout_alignRight="@id/pay_password"
        />
    
    

</RelativeLayout>