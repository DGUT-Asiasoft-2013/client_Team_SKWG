<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     android:descendantFocusability="blocksDescendants" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <com.example.bbook.api.widgets.AvatarView
            android:id="@+id/avatar_fra"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="center_vertical"
            android:text="author" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:singleLine="true"
            android:text="titile"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="content"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/imglayout"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp" >

            <com.example.bbook.api.widgets.RectangleView
                android:id="@+id/img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible" />

            <com.example.bbook.api.widgets.RectangleView
                android:id="@+id/img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="invisible" />

            <com.example.bbook.api.widgets.RectangleView
                android:id="@+id/img3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="3dp"
                android:layout_weight="0.60"
                android:gravity="right"
                android:text="date" />

            <ImageView
                android:id="@+id/fragment_postbar_listview_reply_Num_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/fragment_postbar_listview_reply_Num"
                android:src="@drawable/icon_replay_times" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="num" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#e9e9e9" />

</LinearLayout>