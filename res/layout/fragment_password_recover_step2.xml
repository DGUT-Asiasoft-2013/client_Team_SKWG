<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <fragment 
        android:id="@+id/recover_step2_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.example.bbook.api.widgets.TitleBarFragment"
        tools:layout="@layout/fragment_widget_titlebar"/>
    
    <fragment
        android:id="@+id/input_verifycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="inputcells.SimpleTextInputcellFragment"
        tools:layout="@layout/fragment_inputcell_simpleted" />

    <fragment
        android:id="@+id/input_newpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="inputcells.SimpleTextInputcellFragment"
        tools:layout="@layout/fragment_inputcell_simpleted" />

    <fragment
        android:id="@+id/input_newpassword_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="inputcells.SimpleTextInputcellFragment"
        tools:layout="@layout/fragment_inputcell_simpleted" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        android:text="提交" />

</LinearLayout>